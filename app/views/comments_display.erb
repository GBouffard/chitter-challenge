<div id='comments'>
  <ul>
    <% @comments.each do |comment| %>
      <li>
        <span id='comment-message'>
          <%= comment.message %>
        </span><br>
        <span class='peep_posted_by' id='color-update'>
          posted by <%= comment.user.username %> on the <%= comment.date_time.strftime("%d/%m/%Y") %> at <%= comment.date_time.strftime("%H:%M") %>
        </span>
        <% if current_user == comment.user %>
        <a href="/comments/<%= comment.id %>"><button>Update Comment</button></a>
        <form action="/comments/<%= comment.id %>" method="post">
          <input type="hidden" name="_method" value="delete">
          <input type="submit" value="Delete Comment">
        </form>
        <% end %><br>
      </li>
    <% end %>
  </ul>
</div>