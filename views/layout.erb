<body>
  <% if current_user %>
    Welcome, <%= current_user.email %>
  <% end %>
  <% if flash[:errors] && !flash[:errors].empty? %>
    Sorry, there were the following problems with your registration:
    <ul id='errors'>
      <% flash[:errors].each do |error| %>
        <li><%= error %></li>
      <% end %>
    </ul>
   <% end %>
  <%= yield %>
</body>
